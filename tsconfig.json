{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "removeComments": false,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": ".",
    "jsx": "react-jsx",
    "allowJs": true,
    "resolveJsonModule": true,
    "typeRoots": ["node_modules/@types", "global.d.ts"],
    "paths": {
      "@/*": ["./src/*"],
      "@/assets": ["./src/assets/*"],
      "@/components/*": ["./src/components/*"],
      "@/pages/*": ["./src/pages/*"],
      "@/utils/*": ["./src/utils/*"],
      "@/apis/*": ["./src/apis/*"],
      "@/constants/*": ["./src/constants/*"],
      "@/typings/*": ["src/typings/*"],
      "@/storage/*": ["./src/storage/*"],
    }
  },
  "exclude": ["node_modules", "dist","./src/components/vant-weapp/*"],
  "compileOnSave": false
}
